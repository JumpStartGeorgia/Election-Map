<% title t('.title') %>

<% if request.post? %>
	<p>
		<%= t('.created') %>
	</p>
<% else %>
	<%= form_tag cache_default_custom_event_path do %>
		<p>
			<%= t('.explanation') %>
		</p>
		<p>
			<%= t('.time') %>
		</p>
		<p>
			<%= submit_tag t("app.buttons.create"), :id => "submit" %>
		</p>
	<% end %>
<% end %>

<div class="form-actions">
	<%= link_to t('app.buttons.admin'), admin_path,
  :class => 'btn' %>
</div>
