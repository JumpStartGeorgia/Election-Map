<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN" "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="1800" height="1000" viewBox="0 0 1800 1000">

	<rect x="0" y="0" width="100%" height="100%" fill="white" />

	<%= params[:hidden_form_parent_layer].html_safe %>
	<%= params[:hidden_form_child_layer].html_safe %>

	<text x="50" y="700" style="fill:black; font-family:arial; font-size:18;">
		<%= params[:hidden_form_map_title] %>
    <tspan x="50" y="725"><%= params[:hidden_form_indicator_name] %></tspan>
    <tspan x="50" y="750"><%= params[:hidden_form_event_name] %></tspan>
  </text>

	<text x="50" y="800" style="fill:black; font-family:arial; font-size:15;">
		<%= params[:hidden_form_indicator_description] %>
  </text>

	<text x="0" y="825" style="fill:black; font-family:arial; font-size:15;">
		<% if !params[:hidden_form_scales].nil? && params[:hidden_form_scales].length > 0 %>
			<% params[:hidden_form_scales].split("||").each_with_index do |scale, i| %>
		    <tspan x="<%= 180*(i-5*(i/5))+25 %>" y="<%= i/5*25+850 %>"><%= scale %></tspan>
			<% end %>
		<% end %>
  </text>

	<% if !params[:hidden_form_colors].nil? && params[:hidden_form_colors].length > 0 %>
		<% params[:hidden_form_colors].split("||").each_with_index do |color, i| %>
			<rect x="<%= 180*(i-5*(i/5))+7 %>" y="<%= i/5*25+837 %>" width="15" height="15"
				style="fill:<%= color %>; stroke:black; stroke-width:1; fill-opacity: <%= params[:hidden_form_opacity]%>;" />
		<% end %>
	<% end %>

</svg>
