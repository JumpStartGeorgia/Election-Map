<% title t('.title') %>

<%= form_tag delete_shapes_path, :multipart => true do %>
	<div>
		<p>
			<%= t('.instructions')%>    
		</p>
		<p>
			<%= t('.important')%>:
		</p>
		<ul>
			<li>
				<%= t('.help_1')%>
			</li>
			<li>
				<%= t('.help_2')%>
			</li>
		</ul>
	</div>

	<div>
		<p>
			<%= t('app.common.event') %>
			<%= select_tag "event_id", options_from_collection_for_select(@events, "id", "name", params[:event_id]) %>
		</p>
		<p>
			<%= t('app.common.shape_type') %>
			<%= select_tag "shape_type_id", options_from_collection_for_select(@types, "id", "name", params[:shape_type_id]) %>
		</p>
	</div>
	<div>
	  <%= submit_tag t("app.buttons.delete") %>
	</div>
<% end %>

<div class="admin_nav">
	<%= link_to t('app.buttons.admin'), admin_path %>
</div>
