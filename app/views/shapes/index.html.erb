<% title 'Listing shapes' %>


<table>
  <tr>
    <th>Shape type</th>
    <th>Common</th>
    <th>Name</th>
    <th>Geo data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shapes.each do |shape| %>
  <tr>
    <td><%= shape.shape_type_id %></td>
    <td><%= shape.common_id %></td>
    <td><%= shape.name %></td>
    <td><%= shape.geometry %></td>
    <td><%= link_to 'Show', shape %></td>
    <td><%= link_to 'Edit', edit_shape_path(shape) %></td>
    <td><%= link_to 'Destroy', shape, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

