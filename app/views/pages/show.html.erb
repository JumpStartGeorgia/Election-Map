<% title t('.title') %>

<p>
  <b><%= t('app.common.name')%>:</b>
  <%= @page.name %>
</p>

<p>
  <b><%= t('app.common.title')%>:</b>
  <%= @page.title %>
</p>

<p>
  <b><%= t('app.common.description')%>:</b>
</p>
<%= simple_format(@page.description, {}, :sanitize => false) %>

<div class="form-actions">
	<%= link_to t('app.buttons.edit'), edit_page_path(@page),
  :class => 'btn btn-primary' %>
	<%= link_to t('app.buttons.list'), pages_path,
  :class => 'btn' %>
	<%= link_to t('app.buttons.admin'), admin_path,
  :class => 'btn' %>
</div>
