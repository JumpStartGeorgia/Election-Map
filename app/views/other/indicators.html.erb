<% title t('.title') %>

<% if @data.present? %>

  <div id="indicator_profile_type_selection">
    <% @data["indicator_types"].each_with_index do |type, index| %>
      <div class="indicator_profile_type_selection_item <%= index == 0 ? 'active' : '' %>" data-id="<%= type["id"] %>">
        <%= type["name"] %>
      </div>
    <% end %>
  </div>

  <% @data["indicator_types"].each_with_index do |type, index| %>
    <div id="<%= "indicator_profile_#{type["id"]}"%>" data-id="<%= type["id"] %>" class="profiles <%= index == 0 ? 'active' : '' %>">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <% @data["header"].each do |header| %>
              <th><%= header %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% type["indicators"].each do |data| %>
            <tr>
              <% data.each_with_index do |cell, index| %>
                <% if index > 2 %>
                  <td>
                    <% if cell %>
                      <%= link_to('#', :class => 'view_details') do %>
                        <%= image_tag('magnifier.png') %>
                        <%= t('app.buttons.view') %>
                      <% end %>
                    <% end %>
                  </td>
                <% elsif index > 1 %>
                  <td><%= cell %></td>
                <% elsif index == 1 %>
                  <td><%= link_to cell, "#" %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

<% else %>
	<p>
		<%= t('.no_records') %>
	</p>
<% end %>
