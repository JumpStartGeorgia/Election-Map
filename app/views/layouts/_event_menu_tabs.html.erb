<% if @event_menu && !@event_menu.empty? %>
	<div id="events_menu_tabs">
		<ul>
			<% @event_menu.each do |event_type| %>
				<% is_active = event_type["id"].to_s == params[:event_type_id].to_s ? "ui-tabs-selected ui-state-active" : "" %>
				<li class="<%=is_active%>"><%= link_to event_type["name"], "#event_type_#{event_type["id"]}" %></li>
			<% end %>
		</ul>
		<% @event_menu.each do |event_type| %>
			<div id="<%= "event_type_#{event_type["id"]}"%>">
				<ul class="menu_list">
					<% event_type["events"].each do |event| %>
						<% is_active = event["id"].to_s == params[:event_id].to_s ? "active" : "not_active" %>
						<li>
							<%
								 index = event["url"].index(">")
									if index
										url = event["url"].insert(index, "class=\"#{is_active}\" title=\"#{strip_tags(event["description"])}\"")
									end
							%>
							<%= url %>
						</li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div>
<% end %>
