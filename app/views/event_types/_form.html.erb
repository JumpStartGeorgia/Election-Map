<%= semantic_form_for @event_type do |f| %>
	<%= f.semantic_errors %>
	<%= f.inputs :for => :event_type_translations do |event_type_translation, i| %>

		<% formLocale = I18n.available_locales[i-1] %>

		<div id="form-<%= formLocale %>" class="multilanguage">
			<h3><%= t("app.language.#{formLocale}") %></h3>

			<%= event_type_translation.input :name %>
			<%= event_type_translation.hidden_field :locale , :value => formLocale %>
		</div>

	<% end %>

	<%= f.input :sort_order %>

	<div class="form-actions">
	  <%= f.submit nil, :class => 'btn btn-success' %>
	  <%= f.submit nil, :class => 'btn btn-warning', :type => :reset, :value => t('app.buttons.reset'), :name => :reset %>
	  <%= link_to t('app.buttons.cancel'), event_types_path, :class => 'btn btn-mini btn-warning' %>
	</div>

<% end %>
