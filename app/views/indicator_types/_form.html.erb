<%= semantic_form_for @indicator_type do |f| %>
  <%= f.error_messages %>
  <%= f.inputs :for => :indicator_translations do |indicator_translation, i| %>
	
  	<% formLocale = I18n.available_locales[i-1] %>
	
  	<div id="form-<%= formLocale %>" class="multilanguage">
  		<h3><%= t("app.language.#{formLocale}") %></h3>

  		<%= indicator_translation.input :name %>
  		<%= indicator_translation.hidden_field :locale , :value => formLocale %>
  	</div>

  <% end %>

  <%= f.inputs do %>
    <%= f.input :has_summary, :as => :radio %>
  <% end %>

	<%= f.actions :submit, :reset, :cancel %>
<% end %>
