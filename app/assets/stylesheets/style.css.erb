/* Reset */
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p,
blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img,
ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center,
dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody,
tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure,
figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary,
time, mark, audio, video
{
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
}

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav,
section
{
    display: block;
}

ol, ul
{
    list-style: none;
}

/* Grouping */
.group:after
{
    visibility: hidden;
    display: block;
    content: '';
    clear: both;
    height: 0;
}

*:first-child+html .group
{
    zoom: 1;
}

/* General */
body
{
    line-height: 1;
    font-size: 75%;
    background: url(<%=asset_path "bg.jpg"%>) repeat;
    color: #FFF;
    font-family: tahoma, arial, verdana;
}

a, a:link, a:hover, a:visited, a:active
{
    color: #FFF;
    text-shadow: 1px 1px 1px #555;
}

a.no-shadow
{
    text-shadow: none;
}

a:hover
{
	background-color: transparent;
    text-decoration: none;
}

.wrap
{
    margin: 0 auto;
    width: 1125px;
}

header {
	position: relative;
	z-index: 1100;
}

#container
{
    margin: 0 auto;
	margin-bottom: 2.5em;
}

/* Top */
#top
{
    padding: 9px 0 1px;
    /*background: #10478A;*/
    background: transparent url(<%=asset_path "top-bg.png"%>) repeat-x;
}

#top .wrap
{
    margin-bottom: 10px;
}

#top .wrap > div
{
    float: left;
}

#top .logo
{
    float: right !important;
}

#top #app_title
{
  width: 30%;
	font-size: 20pt;
}

#top #app_title a
{
	text-decoration: none;
}
#top #app_title a:hover
{
	color: #ddd;
}

#top #language_form
{
    width: 30%;
	height: 51px;
	text-align: center;
}

#top-line
{
    height: 0;
    border-top: 1px dashed #999;
}

/* Splash */
#splash
{
    background: url(<%=asset_path "splash-bg.png"%>) repeat-x;
    margin-bottom: 0;
    height: 87px;
  	text-align: center;
		line-height: 60px;
}


/* Indicators */
#indicators
{
    margin: 15px 0 15px 225px;
}

#indicators > li
{
    float: left;
    margin: 6px;
}

#indicators > li > a
{
    display: block;
    padding: 4px 5px 5px;
    background: #61778D;
    border-radius: 3px;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    text-decoration: none;
    /*letter-spacing: 1px*/
}

#indicators > li > a.active
{
    background: #AAA;
    cursor: default;
}

/* Events */
#events
{
  margin: 0;
}

#events h3
{
	padding: 0.5em;
	font-size: 14pt;
	font-weight: bold;
	background: #2985C4;
	color: #fff;
	text-transform:uppercase;
}

#events > ul > li
{
	float: left;
	margin: 0;
	padding: 0;
}

#events a
{
		display: block;
		padding: 0.5em;
    color: #BBB;
    text-decoration: none;
    font-size: 108.3%;
}

#events a.active,
#events a:hover
{
    color: #EEE;
    text-shadow: 1px 1px 1px #333;
}

#events a.active
{
    cursor: default;
    font-weight: bold;
}

/* Map */
#map-container {
	position: relative;
	width: 900px;
	float: left;
    margin-bottom: 25px;
	}
#map{ width: 900px;
	height: 600px;
    background: #edecd1;
    border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    box-shadow: 0 0 10px #444;
    -webkit-box-shadow: 0 0 10px #444;
    -moz-box-shadow: 0 0 10px #444;
}



#export {
	display: none;
	position: absolute;
	right: 0px;
	top: 0px;
	z-index: 900;
	background: transparent;
	letter-spacing: -3px;
}

#export img {
opacity:0.7;
filter:alpha(opacity=70); /* For IE8 and earlier */
}
#export img:hover {
opacity:1.0;
filter:alpha(opacity=100); /* For IE8 and earlier */

}

/* Map Box */
#map-title
{
    position: absolute;
    left: 0;
    top: 0;
		z-index: 900;
    min-width: 200px;
    padding: 5px 10px 6px;
    background: #A6A6A6;
    box-shadow: 0 0 3px #444;
    -moz-box-shadow: 0 0 3px #444;
    -webkit-box-shadow: 0 0 3px #444;
    -webkit-border-top-left-radius: 3px;
    -moz-border-radius-topleft: 3px;
    border-top-left-radius: 3px;
    -webkit-border-bottom-right-radius: 3px;
    -moz-border-radius-bottomright: 3px;
    border-bottom-right-radius: 3px;
}


/* Shape Layer Navigation */
#shape_layer_navigation
{
	margin: 0.5em 0;
}

#shape_layer_navigation > li
{
    padding: 5px 15px 0 15px;
    position: relative;
    float: left;
    border-top: 10px solid #888;
    text-align: center;
}

#shape_layer_navigation > li.first
{
    text-align: left;
}

#shape_layer_navigation > li.last
{
    text-align: right;
    padding-right: 0;
}

#shape_layer_navigation > li.first > span
{
    left: -3px;
}

#shape_layer_navigation > li.last > span
{
    left: auto;
    right: -3px;
}

#shape_layer_navigation > li > span
{
    position: absolute;
    top: -10px;
    left: 50px;
    width: 10px;
    height: 10px;
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    background: #999;
}

#shape_layer_navigation > li > span.active
{
    background: #B0B0B0;
}

#shape_layer_navigation > li > a
{
    font-size: 108.3%;
    text-decoration: none;
    color: #BBB;
}

#shape_layer_navigation > li > a:hover
{
    color: #DDD;
}

#shape_layer_navigation > li.active
{
    border-top-color: #CCC;
}

#shape_layer_navigation > li.active > a
{

    color: #DDD;
    font-weight: bold;
    letter-spacing: 1px;
    cursor: default;

}

/* Footer */
footer
{
    padding: 12px 0 15px;
    margin-top: -10px;
    background: #8D9095 url(<%=asset_path "footer-top-border.jpg"%>) repeat-x;
    text-align: center;
    width: 100%;
}

footer > a
{
    margin: 0 10px;
}



/* Page Content */
#content
{
    margin: 0 auto 25px;
    width: 640px;
    min-height: 300px;
    background: #F0F0F0;
    border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    box-shadow: 0 0 10px #444;
    -webkit-box-shadow: 0 0 10px #444;
    -moz-box-shadow: 0 0 10px #444;
    color: #333;
    padding: 1.5em;
    font-size: 11pt;
}

#content p
{
    margin: 1em 0;
}

#container h2
{
    display: block;
    margin: 0.5em 0;
    color: #EEE;
    font-size: 200%;
    text-shadow: 0 0 25px #FFF;
    text-decoration: none;
    text-align: center;
    text-transform: capitalize;
}

#container #content h3
{
    display: block;
    margin: 1.5em 0;
    color: #000;
    font-size: 125%;
    text-shadow: 0 0 25px #FFF;
    text-decoration: none;
}

#container #content a, #container #content a:link, #container #content a:hover, #container #content a:visited, #container #content a:active
{
    color: #000;
    text-shadow: none;
}
#container  #content a:hover
{
    text-decoration: none;
}

#container #content ul
{
    list-style: disc;
	margin-left: 1.5em;
}
#container #content ol
{
    list-style: none;
	margin-left: 1.5em;
}



/* Forms */
label
{
    font-weight: bold;
    cursor: pointer
}

input[type=text],
input[type=password],
input[type=url],
input[type=email],
input.text,
input.title,
textarea
{
    background-color: #fff;
    border: 1px solid #bbb;
    color: #000;
}

input[type=text]:focus,
input[type=password]:focus,
input[type=url]:focus,
input[type=email]:focus,
input.text:focus,
input.title:focus,
textarea:focus
{
    border-color: #666;
}

select
{
    background-color: #fff;
    border-width: 1px;
    border-style: solid;
}

input[type=text],
input[type=password],
input[type=url],
input[type=email],
input.text,
input.title,
textarea,
select
{
    margin: 0.5em 0;
}

input.text,
input.title
{
    width: 300px;
    padding: 5px;
}

input.title
{
    font-size: 1.5em;
}

textarea
{
    width: 390px;
    height: 250px;
    padding: 5px;
}

.error,
.errorExplanation,
.alert,
.notice,
.success,
.info
{
    padding: 0.8em;
    margin-bottom: 1em;
    border: 2px solid #ddd;
}

.error, .alert, .errorExplanation
{
    background: #fbe3e4;
    color: #8a1f11;
    border-color: #fbc2c4;
}

.errorExplanation h2
{
    color: #8a1f11 !important;
}


.notice
{
    background: #fff6bf;
    color: #514721;
    border-color: #ffd324;
}

.success
{
    background: #e6efc2;
    color: #264409;
    border-color: #c6d880;
}

.info
{
    background: #d5edf8;
    color: #205791;
    border-color: #92cae4;
}

.error a, .alert a, .errorExplanation a
{
    color: #8a1f11;
}

.notice a
{
    color: #514721;
}

.success a
{
    color: #264409;
}

.info a
{
    color: #205791;
}

label.error { display: block; margin: 0 !important; }

/* Legend */

#footnote {
	background-color: #F7F3E6;
	color: #000;
	padding: 0.3em;
	font-size: smaller;
  font-family: verdana, tahoma, arial;
}

